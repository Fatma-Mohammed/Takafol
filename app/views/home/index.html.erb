<%# <<<<statistics>>>> %>

<section class="section section-default section-default-scale-8">
	<div class="container">
		<div class="row">
			<div class="counters counters-text-light">
				<div class="col-md-3 col-sm-6">
					<div class="counter">
						<strong data-to=<%=CharitiesCase.all.count%> data-append="+">1000+</strong>
						<label>Verified Cases</label>
					</div>
				</div>
				<div class="col-md-3 col-sm-6">
					<div class="counter">
						<strong data-to=<%=Charity.all.count%>>5</strong>
						<label>Registered Charities</label>
					</div>
				</div>
				<div class="col-md-3 col-sm-6">
					<div class="counter">
						<strong data-to=<%=Donor.all.count%>>352</strong>
						<label>Registered Donors</label>
					</div>
				</div>
				<div class="col-md-3 col-sm-6">
					<div class="counter">
						<strong data-to=<%=DonorsCase.all.count%>>178</strong>
						<label>Adapted Cases</label>
					</div>
				</div>
			</div>
		</div>
	</div>
</section>


<div class="container">
  <div class=row>
<%= render :partial => "case", :collection => @cases.limit(8), :as => :c %>
  </div>
</div>

<% end %>

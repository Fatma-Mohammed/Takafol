<p id="notice"><%= notice %></p>

<h1>Cases</h1>


<%= form_with(url: "/search/:q" , method: "get" , local: true )  do %>
  <%= label_tag(:q, "Search for:") %>
  <%= text_field_tag(:search) %>
  <%= submit_tag("Search") %>
<% end %>

<%
def cutter (x)
     i=0
    counter=x.split.count
    $a=[]
    while i < counter  do
        $y=x.split(' ')[i][0].capitalize
        i +=1
        $a.push($y)
     end
     $a.join(".")
end
%>

<div id="search">
<label>search by address</label>
<select name="addresses" id="addresses" form="carform">
    <% @governorates.each do |governorate| %>

      <option value=<%=governorate.id%>><%= governorate.name_en %></option>
    <% end %>
</select>

<div>



<table>
  <thead>
    <tr>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
   <div> Cases that are protected by charities </div>

    <% @cases.each do |c| %>

     <% if  !c.charities.empty? || !c.donors.empty? %>
        <% if c.charities_cases.last.state == "protected" && c.amount_needed >= c.amount_obtained%>
          <tr>
            <td> <%if !charity_signed_in?%>
              <%= cutter(c.name)%>
              <% else %>
              <%= c.name%>
              <% end %>
            </td>
            <td><%= link_to 'Show', c %></td>
            <%if charity_signed_in?%>
              <%if !current_charity.charities_cases.where(case_id: c.id).last.nil? %>
                <td><%= link_to 'Edit', edit_case_path(c) %></td>
                <td><%= link_to 'Destroy', c, method: :delete, data: { confirm: 'Are you sure?' } %></td>
            <% end %>
           <% end %>

            
          </tr>
        <% end %>
      <% end %>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Case', new_case_path %>

<%if charity_signed_in? || donor_signed_in? %>
<%= link_to 'Show Profile', profile_path %> |
<% end %>



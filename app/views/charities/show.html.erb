<div class="container">
  <div class="row">
    <div class="col-md-9">
      <div class="col-md-12">
        <div class="feature-box">
          <div class="feature-box-icon">
            <i class="fa fa-group"></i>
          </div>
          <div class="feature-box-info">
            <h2 class="mb-sm" id="first"><%= current_charity.name ? current_charity.name : "Undefined" %></h2>
            <div class="divider divider-small">
              <hr>
            </div>
          </div>
        </div>
      </div>

      <dl>
        <dt>About</dt>
        <dd><%= current_charity.description ? current_charity.description : "Undefined" %></dd>

        <dt>Phone number</dt>
        <dd><%= current_charity.phone_number ? current_charity.phone_number : "Undefined" %></dd>
        <dt>Address</dt>
        <dd><%= current_charity.address ? current_charity.address : "Undefined" %></dd>

        <dt>Email-Address</dt>
        <dd><%= current_charity.email ? current_charity.email : "Undefined" %></dd>
      </dl>
    </div>
  </div>
</div>


<!-- TODO: if there's a problem with fonts, I ommmiteed a font from this sction-->
<header id="header" class="header-mobile-nav-only header-flex" data-plugin-options="{'stickyEnabled': true, 'stickyEnableOnBoxed': true, 'stickyEnableOnMobile': true, 'stickyStartAt': 52, 'stickySetTop': '-52px', 'stickyChangeLogo': true}">
  <div class="header-body">
    <div class="header-top">
      <div class="container">
        <p>
          <%= t 'layout.get_in_touch' %>
          <span class="ml-xs"><i class="fa fa-phone"></i> (123) 456-789</span><span class="hidden-xs"> |
          <i class="fa fa-language" aria-hidden="true"></i>
          <% if session[:locale] == "ar" %>
          <a href="/home/en">English</a>
            <% else %>
          <a href="/home/ar">عربي</a>
            <% end %>
        </span>
        </p>


        <div class="header-search hidden-xs">
          <%= form_with(url: "/search/:q", method: "get", local: true, id: "searchForm") do %>

            <%# <form id="searchForm" action="page-search-results.html" method="get"> %>
            <div class="input-group">
              <input type="text" class="form-control" name="search" id="search" placeholder="<%= t 'layout.search' %>..." required>

              <span class="input-group-btn">
											<button class="btn btn-default" type="submit"><i class="fa fa-search"></i></button>
										</span>
            </div>
          <% end %>
        </div>


      </div>
    </div>
    <div class="header-container container mt-sm">
      <div class="header-row">
        <div class="header-column">
          <div class="header-logo">
            <a href="/">
              <img alt="Porto" width="110" height="75" src="<%= image_path 'mylogo.png' %>">
            </a>
          </div>
        </div>
        <div class="header-column">
          <div class="header-row">
            <div class="header-nav header-nav-stripe">
              <button class="btn header-btn-collapse-nav" data-toggle="collapse" data-target=".header-nav-main">
                <i class="fa fa-bars"></i>
              </button>
              <div class="header-nav-main header-nav-main-square header-nav-main-effect-1 header-nav-main-sub-effect-1 collapse">
                <nav>
                  <ul class="nav nav-pills" id="mainNav">
                    <li class="">
                      <a href="/">
                        <%= t 'layout.home' %>
                      </a>
                    </li>
                    <li class="">
                      <%= link_to t('layout.charities'), charities_path %>
                      </a>
                    </li>
                    <li class="">
                      <%= link_to t('layout.cases'), cases_path %>
                      </a>
                    </li>


                    <li class="dropdown">
                      <% if charity_signed_in? %>
                        <a class="dropdown-toggle" href="<%= profile_path %>">
                          <%= t 'layout.welcome' %> - <strong><%= current_charity.name %></strong>
                        </a>
                        <ul class="dropdown-menu">
                          <li><%= link_to t('layout.logout'), destroy_charity_session_path, method: :delete %></li>
                          <li><%= link_to t('layout.manage_account'), edit_charity_registration_path %></li>
                        </ul>
                      <% elsif donor_signed_in? %>
                        <a class="dropdown-toggle" href="<%= profile_path %>">
                          <%= t 'layout.welcome' %> - <strong><%= current_donor.name %></strong>
                        </a>
                        <ul class="dropdown-menu">
                          <li><%= link_to t('layout.logout'), destroy_donor_session_path, method: :delete %></li>
                          <li><%= link_to t('layout.manage_account'), edit_donor_registration_path %></li>
                        </ul>
                      <% else %>
                        <a class="dropdown-toggle" href="#"><%= t 'layout.manage_account' %></a>
                        <ul class="dropdown-menu">
                          <li class="dropdown-submenu">
                            <a href="#"><%= t 'layout.sign_in' %></a>
                            <ul class="dropdown-menu">
                              <li><%= link_to t('layout.sign_in_charity'), new_charity_session_path %></li>
                              <li><%= link_to t('layout.sign_in_donor'), new_donor_session_path %></li>
                            </ul>
                          </li>
                          <li class="dropdown-submenu">
                            <a href="#"><%= t 'layout.sign_up' %></a>
                            <ul class="dropdown-menu">
                              <li><%= link_to t('layout.sign_up_charity'), new_charity_registration_path %></li>
                              <li><%= link_to t('layout.sign_up_donor'), new_donor_registration_path %></li>
                            </ul>
                          </li>
                        </ul>
                      <% end %>
                    </li>
                  </ul>
                </nav>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</header>
